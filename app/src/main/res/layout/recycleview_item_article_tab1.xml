<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/article_tab1_recycle_item_cardview"
        android:layout_margin="@dimen/cardview_padding"
        app:cardCornerRadius="@dimen/cardview_radius"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/article_tab1_recycle_item_image"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_height="120dp"
                android:layout_width="150dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:text="@string/textview"
                android:id="@+id/article_tab1_recycle_item_title"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10sp"
                android:maxLines="3"
                tools:ignore="TextViewEdits"
                android:layout_marginTop="21dp"
                android:layout_width="150dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/article_tab1_recycle_item_image"
                android:layout_toEndOf="@+id/article_tab1_recycle_item_image"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" />

            <TextView
                android:text="@string/textview2"
                android:layout_width="120dp"
                android:id="@+id/article_tab1_recycle_item_tag"
                android:layout_height="20dp"
                android:textStyle="normal|bold"
                android:layout_marginBottom="14dp"
                android:textAlignment="viewStart"
                android:textSize="12sp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/article_tab1_recycle_item_title"
                android:layout_alignStart="@+id/article_tab1_recycle_item_title" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>